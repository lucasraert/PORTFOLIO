<div id="homenav">
  <nav>
    <%= link_to root_path do %>
    <%= image_tag "logo.png", id:"logo"%>
    <% end %>
    <a href="/hire" class="hire-link">HIRE ME</a>
  </nav>
</div>
<div id="home">
  <div class="container">
    <h1>Hello, I am Lucas Raert -<br>
    A product designer based in Paris</h1>
    <div class="hire-link-mb">
      <a href="/hire" class="hire-link-mb__content">HIRE ME</a>
    </div>
  </div>
</div>
<div id="work">
  <div class="block-text center-content u-margin" id="work-calypso">
    <%= image_tag "workcalypso.png", id:"work-phone"%>
    <h1>Calypso</h1>
    <h3>Turn everyone into surf travel agents</h3>
    <div class="button-container">
      <a href="/calypso" class="button">
        Case study
      </a>
    </div>
  </div>
</div>
<div id="contact">
  <header>
  <div class="container">
    <h1>Get in touch or follow me online</h1>
    <h3>Send me an email at <a href="mailto:lucasraert@gmail.com">lucasraert@gmail.com</a> and I will get back to you as soon as possible.</h3>
  </div>
  <div class="social-container">
    <ul class="social">
      <li><%= link_to image_tag('linkedin.svg'), "http://www.linkedin.com/in/lucasraert" %></li>
      <li><%= link_to image_tag('github-logo.svg'), "http://www.github.com/lucasraert" %></li>
      <li><%= link_to image_tag('twitter.svg'), "http://www.twitter.com/lucasraert" %></li>
      <li><%= link_to image_tag('instagram.svg'), "http://www.instagram.com/lucasraert" %></li>
    </ul>
  </div>
</header>
</div>
<% content_for(:after_js) do %>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const home = document.getElementById('home');
    const work = document.getElementById('work');
    const homenav = document.getElementById('homenav');
    home.classList.add('active');
    work.classList.add('active');
    homenav.classList.add('active');
  });
</script>
<% end %>
